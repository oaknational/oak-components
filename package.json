    "@storybook/blocks": "^7.5.1",
    "@storybook/nextjs": "^7.5.3",
    "@storybook/react": "^7.5.1",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.6",
    "@types/react": "^18.2.31",
